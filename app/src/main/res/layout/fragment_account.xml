<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.fragment.AccountFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:outlineAmbientShadowColor="@color/bgrey">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ACCOUNT"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="352dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/bgrey">

        <Button
            android:id="@+id/logBtn"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:cornerRadius="0dp"
            android:backgroundTint="@android:color/transparent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up/Login"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="W&amp;T Member"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="18dp"
                android:textColor="@color/tgrey"/>

            <TextView
                android:id="@+id/bottomTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="18dp"
                android:text="Sign up for member sale and more!"
                android:textColor="@color/tgrey"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Add a horizontal line here -->
    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="20dp"
        android:background="@color/grey" />

    <Button
        android:id="@+id/ordersBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDERS"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/white"/>

    <!-- Add a horizontal line here -->
    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:background="@color/grey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="HELP"
        android:textSize="12sp"
        android:layout_marginLeft="31dp"/>

    <Button
        android:id="@+id/faqBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAQ"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp" />

    <Button
        android:id="@+id/contactBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT US"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="5dp" />

    <!-- Add a horizontal line here -->
    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:background="@color/grey" />

    <LinearLayout
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="2dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/baseline_logout_24"
            android:backgroundTint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:text="LOG OUT"
            android:textSize="20dp"
            app:cornerRadius="0dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

    </LinearLayout>

    <!-- Add a horizontal line here -->
    <View
        android:id="@+id/logoutBar"
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:background="@color/grey"
        android:visibility="gone"/>




</LinearLayout>