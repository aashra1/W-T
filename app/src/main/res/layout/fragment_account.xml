<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.fragment.AccountFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="332dp"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/bgrey">

        <Button
            android:id="@+id/logBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/grey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign Up/Login"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="18dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="W&amp;T Member"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="18dp"
                android:textColor="@color/tgrey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="18dp"
                android:text="Sign up for member sale and more!"
                android:textColor="@color/tgrey"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Add a horizontal line here -->
    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="33dp"
        android:layout_marginLeft="20dp"
        android:background="@color/grey" />

    <Button
        android:id="@+id/ordersBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ORDERS"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/white"/>

    <!-- Add a horizontal line here -->
    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:background="@color/grey" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="HELP"
        android:textSize="12sp"
        android:layout_marginLeft="36dp"/>

    <Button
        android:id="@+id/faqBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FAQ"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/paymentBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PAYMENT"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/contactBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONTACT US"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="10dp" />

    <!-- Add a horizontal line here -->
    <View
        android:layout_width="370dp"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:background="@color/grey" />



</LinearLayout>